<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guet.courseselecthelper.mapper.CourseMapper">
    <insert id="insertCourseSelectionRecords">
        insert into sc(student_id, course_id) value (#{studentId}, #{courseId});
    </insert>
    <delete id="deleteCourse">
        delete from sc where student_id = #{studentId} and course_id = #{courseId};
    </delete>
    <select id="SelectedCourses" resultType="string">
        select course_id from sc where student_id = #{studentId};
    </select>
</mapper>